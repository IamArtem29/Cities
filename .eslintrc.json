{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "@next/next/no-img-element": "off",
    "newline-before-return": "warn",
    "eqeqeq": "error",
    "curly": "warn",
    "no-console": ["error", { "allow": ["error"] }]
  },
  "globals": {
    "JSX": true
  }
}
